<% include partials/top %>
<div class="row">
  <div class="col-12 mb-2">
    <h1><%= campground.name %></h1>
    <img src=<%= campground.image%> alt="Default campsite"/>
    <p><%= campground.blurb %></p>
    <a href="/campgrounds/<%= campground.slug%>/edit" class="btn btn-primary">Edit</a>
  </div>
</div>
<div class="row">
  <div class="col-12 mt-2">
    <h4>Comments</h4>
    <% campground.comments.forEach(function(comment) { %>
      <p>
        <%= comment.text %>
        </p>
    <% }) %>
  </div>
</div>

<% include partials/bottom %>
