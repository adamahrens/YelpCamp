<% include ../partials/top %>
<div class="row">
  <div class="col-md-3">
    <p class="lead">
      YelpCamp
      </p>
      <div class="list-group">
        <li class="list-group-item active">
          Info
          </li>
          <li class="list-group-item">
            Contact
            </li>
        </div>
  </div>
  <div class="col-md-9 mb-2">
    <h1><%= campground.name %></h1>
    <h4 class="pull-right">$69/night</h4>
    <img src=<%= campground.image%> alt="Default campsite" class="img-thumbnail" />
    <p><%= campground.blurb %></p>
    <a href="/campgrounds/<%= campground.slug%>/edit" class="btn btn-primary">Edit</a>
    <div class="row mt-2">
      <div class="col-md-10 mt-2 mb-2 pb-2">
        <h4>Comments</h4>
        <% campground.comments.forEach(function(comment) { %>
          <div class="row">
              <div class="col-md-8">
                <p>
                  <%= comment.author %>
                </p>
                <p class="border-bottom">
                  <%= comment.text %>
                  </p>
              </div>
          </div>
        <% }) %>
      </div>
      <div class="col-md-2">
        <span class="float-right">
          <a href="/campgrounds/<%= campground.slug%>/comments/new" class="btn btn-primary">Add Comment</a>
        </span>
      </div>
    </div>
  </div>
</div>

<% include ../partials/bottom %>
