
<% if (campground != null) { %>
    <h1>Editing <%= campground.name %></h1>
    <form class="ui form" action="/campgrounds/<%= campground.slug %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" value="<%= campground.name %>"name="campground[name]" id="name" placeholder="Campground Name" />
      </div>
      <div class="form-group">
        <label for="blurb">About</label>
        <input type="text" class="form-control" value="<%= campground.blurb %>" name="campground[blurb]" id="blurb" placeholder="Blurb" />
      </div>
      <div class="form-group">
        <label for="price">Cost per night</label>
        <input type="number" class="form-control" value="<%= campground.price %>" name="campground[price]" id="price" />
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        <input type="text" class="form-control" value="<%= campground.image %>" name="campground[image]" id="image" />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
<% } else { %>
  <form class="" action="/campgrounds" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="Campground Name" />
    </div>
    <div class="form-group">
      <label for="blurb">About</label>
      <input type="text" class="form-control" name="blurb" id="blurb" placeholder="Blurb" />
    </div>
    <div class="form-group">
      <label for="price">Cost per night</label>
      <input type="number" class="form-control" name="price" id="price" />
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      <input type="text" class="form-control" name="image" id="image" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
<% } %>
